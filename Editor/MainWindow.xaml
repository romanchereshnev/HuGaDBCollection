<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="825">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Margin="20, 5" Name="OldFile" TextWrapping="Wrap"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="20, 5" Name="NewFile" TextWrapping="WrapWithOverflow"></TextBox>
        <Button Grid.Column="0" Grid.Row="1" Margin="20" Click="Button_Click">Choose old file</Button>
        <Button Grid.Column="1" Grid.Row="1" Margin="20" Click="Button_Click_3">Find coruppted files</Button>
     
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="20" Click="Button_Click_2">Edit file</Button>
    </Grid>
</Window>
