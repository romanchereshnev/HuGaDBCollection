<UserControl x:Class="CollectionGUI.ActivityUI.ClimbingDescendUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="150" Height="75">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Name="NamePanel">
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 10, 10, 10">step height</TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" Name="ValuePanel">
            <TextBox Name="StepHeight"  VerticalAlignment="Center" Margin="10, 10, 10, 10"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
